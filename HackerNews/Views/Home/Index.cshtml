@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-md-4">
        <h2>Top Stories</h2>
        <div ng-app="myApp" ng-controller="myCtrl">

            <div data-ng-init="init()">

                <input type='text' ng-model='searchText' placeholder="Search... " />
                <br />

                <ul>
                    <li ng-repeat="x in finalData | filter:searchText">
                        <a href="{{x.url}}" target="_blank">
                            <b>Title:</b> {{ x.title }}
                        </a>
                        <b>Author:</b> {{ x.by }}
                        <br />
                        <b>Score: </b> {{ x.score }} <b>Date: </b> {{ x.time * 1000 | date:'yyyy-MM-dd HH:mm:ss Z'}}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>